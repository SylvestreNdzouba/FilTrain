<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/side_nav_bar"
    tools:context=".ProPassageActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="33dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/custom_edt">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/proPassage"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <AutoCompleteTextView
                android:id="@+id/villedt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:drawablePadding="16dp"
                android:fontFamily="@font/calibri"
                android:hint="Entrer le nom d'une ville "
                android:contentDescription="Votre nom"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@android:color/black"/>

            <Button
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:text="@string/btnPassage"
                android:id="@+id/passage_btn"
                android:textSize="18sp"
                android:layout_marginTop="40dp"
                android:backgroundTint="@color/colorPrimary"
                app:cornerRadius="30dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>