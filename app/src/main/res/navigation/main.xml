        android:id="@+id/comparateur"
        android:name="com.example.filtrain.WebViewActivity"
        android:label="Comparateur"
        tools:layout="@layout/activity_web_view" />

    <activity
        android:id="@+id/profil"
        android:name="com.example.filtrain.ProfilActivity"
        android:label="Profil" />

    <activity
        android:id="@+id/deconnexion"
        android:name="com.example.filtrain.DeconnexionActivity"
        android:label="Déconnexion" />
