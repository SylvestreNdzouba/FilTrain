    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    app:startDestination="@id/home">
    <fragment
        android:id="@+id/home"
        android:name="com.example.filtrain.MainFragment"
        android:label="Home"
        tools:layout="@layout/fragment_main" />

    <activity
        android:id="@+id/inscription"
        android:name="com.example.filtrain.SignUpActivity"
        android:label="Inscription"
        tools:layout="@layout/activity_sign_up2" />
    <activity
        android:id="@+id/connexion"
        android:name="com.example.filtrain.LoginActivity"
        android:label="Connexion" />

    <activity
